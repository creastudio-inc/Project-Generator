@model ProjectGenerator.Models.Project

@{
    ViewBag.Title = "Detail";
}

<section class="about-sec classic-bg1 pad-tb">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-10">
                <div class="common-heading">
                    <h1 class="mb30">@Model.Name</h1>
                    <p>
                        @Model.Description
                    </p>

                </div>
            </div>
            <div class="row upset ovr-bg1 ho-gdnt">
                <div class="col-lg-4 col-sm-6 mt30 wow fadeInUp" data-wow-delay=".2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                    <div class="s-block up-hor ovr-base">
                        <div class="nn-card-set">
                            <div class="s-card-icon"><img src="~/Content/images\icons\branding.svg" alt="service" class="img-fluid"></div>
                            <h4>Database</h4>
                            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                            <a href="@Url.Action("List","Database",new { IDProject=Model.Id})">Learn More <i class="fas fa-chevron-right fa-icon"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 mt30 wow fadeInUp" data-wow-delay=".4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInUp;">
                    <div class="s-block up-hor ovr-base">
                        <div class="nn-card-set">
                            <div class="s-card-icon"><img src="~/Content/images\icons\development.svg" alt="service" class="img-fluid"></div>
                            <h4>Admin Side</h4>
                            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                            <a href="javascript:void(0)">Learn More <i class="fas fa-chevron-right fa-icon"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 mt30 wow fadeInUp" data-wow-delay=".6s" style="visibility: visible; animation-delay: 0.6s; animation-name: fadeInUp;">
                    <div class="s-block up-hor ovr-base">
                        <div class="nn-card-set">
                            <div class="s-card-icon"><img src="~/Content/images\icons\app.svg" alt="service" class="img-fluid"></div>
                            <h4>Theme</h4>
                            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                            <a href="@Url.Action("List","Theme",new { IDProject=Model.Id})">Learn More <i class="fas fa-chevron-right fa-icon"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>